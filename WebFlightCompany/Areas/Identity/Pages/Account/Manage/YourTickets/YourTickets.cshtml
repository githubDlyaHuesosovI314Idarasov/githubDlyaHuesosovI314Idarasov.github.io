<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Passenger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].TimeFrom)
