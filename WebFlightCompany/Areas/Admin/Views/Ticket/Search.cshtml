@model IEnumerable<Models.Ticket>

@{
    ViewData["Title"] = "Search";
}

<h1 class="text-start">Search Tickets by CityFrom and CityTo</h1>
<div class="container-lg">
    <table class="table">
        <thead class="bg-light">
            <tr class="text-center">
                <th>
                    CityFrom
                </th>
                <th>
                    CityTo
                </th>
            </tr>
        </thead>
        <tbody class="align-content-lg-around">
            <tr>
                <form asp-area="Admin" asp-controller="Ticket" asp-action="Search" method="get">
                    <th>
                        <select class="form-control" name="cityFrom" asp-items="ViewBag.CityFrom">
                           <option value="">Select CityFrom</option>
                        </select>
                    </th> 
                    <th>
                        <select class="form-control" name="cityTo" asp-items="ViewBag.CityTo">
                            <option value="">Select CityTo</option>
                        </select>
                    </th>
                    <th>
                        <button type="submit" class="btn align-content-md-end btn-primary">Search</button>
                    </th>
                </form>
            </tr>
        </tbody>


    </table>
</div>

<h1>Ticket List</h1>
<table class="table table-striped">
    <thead class="bg-light">
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Passenger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeTo)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Passenger.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeTo)
            </td>

            <td>
                <form asp-action="BuyTicket" asp-route-id="@item.Id" method="post">
                    @{ 
                        // <a asp-action="BuyTicket" asp-route-id="@item.Id">Buy</a>
                    }
                    <button type="submit" class="btn btn-primary">Buy</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
