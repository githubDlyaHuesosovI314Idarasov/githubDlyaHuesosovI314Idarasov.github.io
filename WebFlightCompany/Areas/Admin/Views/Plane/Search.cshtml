@using Models;
@model IEnumerable<Plane>

@{
    ViewData["Title"] = "Search";
}
<h1>Select Plane by Model or/and CityFrom, CityTo</h1>
<div class="container-lg">
    <table class="table">
        <thead class="bg-light">
            <tr class="text-center">
                <th>Model</th>
                <th>CityFrom</th>
                <th>CityTo</th>
            </tr>
        </thead>
        <tbody class="align-content-lg-around">
            <tr>
                <form asp-area="Admin" asp-controller="Plane" asp-action="Search" method="get">
                <th>
                    <select class="form-control" name="model" asp-items="ViewBag.Models">
                        <option value="">Select Model</option>
                    </select>
                </th>
                <th>
                    <select class="form-control" name="cityFrom" asp-items="ViewBag.CitiesFrom">
                        <option value="">Select CityFrom</option>
                    </select>
                </th>
                <th>
                    <select class="form-control" name="cityFrom" asp-items="ViewBag.CitiesTo">
                        <option value="">Select CityTo</option>
                    </select>
                </th>
                <th>
                    <button type="submit" class="btn align-content-md-end btn-primary">Search</button>
                </th>
                </form>
            </tr>
        </tbody>


    </table>
</div>



<h1>Plane List</h1>
<table class="table table-striped">
    <thead class="bg-light">
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPassengerCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeTo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPassengerCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeTo)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
